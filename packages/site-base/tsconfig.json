{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "strict": true,
    "jsx": "preserve",
    "allowJs": true,
    "importHelpers": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "../..",
    "types": ["jest"],
    "paths": {
      "@zto/zpage": ["packages/zpage/src"],
      "@zto/zpage-core": ["packages/core/src"],
      "@zto/zpage-ffb": ["packages/ffb/src"],
      "@zto/zpage-runtime": ["packages/runtime/src"],
      "@zto/zpage-ui-element": ["packages/ui-element/src"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "packages/**/*.vue",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": ["./node_modules", "./dist"]
}
